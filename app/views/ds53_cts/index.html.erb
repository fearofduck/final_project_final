<div class="page-header">
  <h1>
    Ds53 cts
    <a href="/ds53_cts/new" class="btn btn-lg btn-success">New Ds53 ct</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Jan</th>
        <th>Feb</th>
        <th>Mar</th>
        <th>Apr</th>
        <th>May</th>
        <th>Jun</th>
        <th>Jul</th>
        <th>Aug</th>
        <th>Sep</th>
        <th>Oct</th>
        <th>Nov</th>
        <th>Dec</th>
        <th>Name</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @ds53_cts.each do |ds53_ct| %>
      <tr>
        <td><%= ds53_ct.jan %></td>
        <td><%= ds53_ct.feb %></td>
        <td><%= ds53_ct.mar %></td>
        <td><%= ds53_ct.apr %></td>
        <td><%= ds53_ct.may %></td>
        <td><%= ds53_ct.jun %></td>
        <td><%= ds53_ct.jul %></td>
        <td><%= ds53_ct.aug %></td>
        <td><%= ds53_ct.sep %></td>
        <td><%= ds53_ct.oct %></td>
        <td><%= ds53_ct.nov %></td>
        <td><%= ds53_ct.dec %></td>
        <td><%= ds53_ct.name %></td>
        <td><%= ds53_ct.user.email %></td>
        <td>
          <a href="/ds53_cts/<%= ds53_ct.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == ds53_ct.user %>
            <a href="/ds53_cts/<%= ds53_ct.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_ds53_ct/<%= ds53_ct.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ds53_cts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
